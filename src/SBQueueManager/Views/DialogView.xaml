<Window x:Class="SBQueueManager.Views.DialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dialog" Height="130" Width="300">
    <StackPanel Orientation="Vertical">
        <TextBlock x:Name="Message" MinHeight="50"/>
        <StackPanel Orientation="Horizontal" Height="40" Margin="5" HorizontalAlignment="Right">
            <Button x:Name="Cancel" Content="Cancel" IsCancel="True" Margin="5" MinWidth="100" />
            <Button x:Name="Confirm" Content="Ok" IsDefault="true" Margin="5" MinWidth="100"  />
        </StackPanel>
    </StackPanel>
</Window>
